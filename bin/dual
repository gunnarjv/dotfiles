#!/bin/sh
status="$(cat /sys/class/drm/card0-VGA-1/status)"

export XAUTHORITY=/home/gunnarjv/.Xauthority
export DISPLAY=:0.0

if [ "${status}" = connected ]
then
	xrandr --output HDMI1 --off --output LVDS1 --mode 1366x768 --pos 0x312 --rotate normal --output DP1 --off --output VGA1 --mode 1920x1080 --pos 1366x0 --rotate normal
elif [ "${status}" = disconnected ]
then 
	xrandr --output VGA1 --off
fi
